<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button_selector"
        android:onClick="openSignIn"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:text="Sign In"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/textview_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_sign_in"
        android:layout_alignLeft="@+id/button_hungry_charlie"
        android:layout_alignTop="@+id/button_sign_in"
        android:gravity="center"
        android:text="username"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/primary_text_light"
        android:visibility="invisible"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_leaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textview_username"
        android:layout_alignBottom="@+id/textview_username"
        android:layout_toLeftOf="@+id/button_sign_in"
        android:background="@drawable/custom_button_selector"
        android:onClick="openLeaderboard"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:text="Leaderboards"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:visibility="invisible"
        android:textAllCaps="false" />

    
    <Button
        android:id="@+id/button_pocky_facts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_pocky_stats"
        android:layout_alignLeft="@+id/button_about"
        android:layout_marginBottom="18dp"
        android:background="@drawable/custom_button_selector"
        android:onClick="openPockyFacts"
        android:text="Pocky Facts"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:width="150dp" />

    <Button
        android:id="@+id/button_hungry_charlie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_pocky_facts"
        android:layout_alignLeft="@+id/button_about"
        android:layout_marginBottom="18dp"
        android:background="@drawable/custom_button_selector"
        android:onClick="openHungryCharlie"
        android:text="Hungry Charlie"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:width="150dp" />
    
    <Button
        android:id="@+id/button_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="18dp"
        android:background="@drawable/custom_button_selector"
        android:onClick="openAbout"
        android:text="About"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:width="150dp" />

    <Button
        android:id="@+id/button_pocky_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_about"
        android:layout_alignLeft="@+id/button_about"
        android:layout_marginBottom="18dp"
        android:background="@drawable/custom_button_selector"
        android:onClick="openPockyStats"
        android:text="Pocky Stats"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:width="150dp" />

</RelativeLayout>